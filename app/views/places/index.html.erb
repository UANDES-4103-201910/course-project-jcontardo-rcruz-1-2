<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCOrp_9Nvc62eDpQwSDxpWph8Qc3VkGIn8&callback=initMap">
</script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<p id="notice"><%= notice %></p>

<h1>Places</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= content_tag_for(:tr, @places) do |places|%>
    <td>>%=current_user.name></td>
    <td><%=places.name%></td>
    <td><%=places.address%></td>
    <td><%=places.latitude%></td>
    <td><%=places.longitude%></td>
    <td><%=link_to 'Show', places %></td>
    <td><%=link_to 'Edit' , edit_place_path(places) %></td>
    <td><%=link_to 'Delete', places , method: :delete , data: {confirm: 'Are you sure?'} %></td>
    <%end%>
  </tbody>
</table>
<div style="width: 800px;">
  <div id='map' style='width: 800px; height: 400px;'></div>
</div>
<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>

<%= link_to 'New Place', new_place_path %>
