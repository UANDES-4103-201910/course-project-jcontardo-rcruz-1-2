<!DOCTYPE html>
<html>
<head>
  <title>COURSE PROJECT</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>
<body>
<nav class="navbar navbar-default" style="background-color: #067900;">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#" style="color: #fff;">SHREK SWAMP</a>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>

        <ul class="nav navbar-nav">
          <li>
            <%= link_to root_path do %>
            <span class="glyphicon glyphicon-home"></span>
            Home
            <% end %>
          </li>
        </ul>

        <li>
          <%= link_to new_search_path do %>
          <span class="glyphicon glyphicon-search"></span>
             Search
          <% end %>
        </li>

        <li>
          <%= link_to profiles_path do %>
          <span class="glyphicon glyphicon-profile"></span>
            <% if current_user.name == nil %>
              <%= current_user.email %>
            <% else %>
              <%= current_user.name %>
            <% end %>
          <% end %>
        </li>

        <li>
          <%= link_to new_post_path do %>
            <span class="glyphicon glyphicon-list-alt"></span>
            New Post
          <% end %>
        </li>

        <li>
          <%= link_to dumpsters_path do %>
            <span class="glyphicon glyphicon-trash"></span>
            Dumpster
          <% end %>
        </li>

        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <span class="glyphicon glyphicon-log-out"></span>
            Log Out
          <% end %>
        </li>
      <% end %>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <% if !user_signed_in? %>
        <li>
          <%= link_to new_user_session_path do%>
            <span class="glyphicon glyphicon-log-in"></span>
            Sign In
          <% end %>
        </li>
        <li>
          <%= link_to new_user_registration_path do %>
            <span class="glyphicon glyphicon-user"></span>
            Sign Up
            <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
<%= yield %>
</body>

</html>