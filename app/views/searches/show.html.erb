<h1>Search Result</h1>
<p> <%= link_to 'Back', root_path %> </p>

<% if @search.search_posts.empty? %>
	<p> No post founded <p>
<% else %>
	<% @search.search_posts.each do |p| %>
	<div class="container">
		<div class="jumbotron container text-left">
	      <div class="field">
	        <div class=" row">
	          <div class="col-md-3">
	            <strong>Title:</strong>
	          </div>
	          <div class="col-md-6">
	            <%= p.title %>
	          </div>
	        </div>
	      </div>

	      <div class="field">
	        <div class=" row">
	          <div class="col-md-3">
	            <strong>Description:</strong>
	          </div>
	          <div class="col-md-6">
	            <%= p.description %>
	          </div>
	        </div>
	      </div>

	      <div class="field">
	        <div class=" row">
	          <div class="col-md-3">
	            <strong>Body:</strong>
	          </div>
	          <div class="col-md-6">
	            <%= p.body %>
	          </div>
	        </div>
	      </div>

	      <div class="field">
	        <div class=" row">
	          <div class="col-md-3">
	            <strong>Location:</strong>
	          </div>
	          <div class="col-md-6">
	            <%= p.location %>
	          </div>
	        </div>
	      </div>

	      <div class="field">
	        <div class=" row">
	          <div class="col-md-3">
	            <strong>Post type:</strong>
	          </div>
	          <div class="col-md-6">
	            <%= p.post_type %>
	          </div>
	        </div>
	      </div>
		</div>
	</div>
	<% end %>
<% end %>