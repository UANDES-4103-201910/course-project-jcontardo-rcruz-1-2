<h1>Search</h1>
<%= form_with(model: @search, local: true) do |s| %>
	<div class="field">
		<%= s.label :keywords%> <br />
		<%= s.text_field :keywords %>
	</div> 

	<div class="actions">
		<%= s.submit "Search" , class: "pure-button pure-button-primary" %>
	</div>
<%end%>
<p> <%= link_to 'Back', root_path %> </p>
